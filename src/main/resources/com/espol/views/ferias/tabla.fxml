<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="455.0" prefWidth="728.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espol.controllers.ferias.TablaController">
   <top>
      <Label alignment="CENTER" text="Ferias" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <TableView fx:id="tabla" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn editable="false" prefWidth="60.0" sortable="false" text="Código" />
                <TableColumn editable="false" prefWidth="100.0" text="Nombre" />
                  <TableColumn editable="false" prefWidth="100.0" text="Fecha de Inicio" />
                  <TableColumn editable="false" prefWidth="100.0" text="Lugar" />
                  <TableColumn editable="false" prefWidth="100.0" text="N° Auspiciantes" />
                  <TableColumn editable="false" prefWidth="100.0" text="N° Emprendedores" />
                  <TableColumn editable="false" prefWidth="70.0" sortable="false" text="Opciones" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="645.0" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" text="Volver al Menu Principal" />
            <Button fx:id="nuevaFeriaButton" mnemonicParsing="false" text="Nueva Feria" />
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
